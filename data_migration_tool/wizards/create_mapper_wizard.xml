<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_mapper_wizard_form" model="ir.ui.view">
        <field name="name">create.mapper.wizard.form</field>
        <field name="model">create.mapper.wizard</field>
        <field name="arch" type="xml">
            <form>
                <style>
                    .modal-dialog{
                    position:absolute;
                    left:40vw;
                    }

                    .modal-content{
                    width:300px;
                    }
                </style>
                <h2 style="text-align: center">Select Odoo Model to Map</h2>
                <field name="odoo_model_id" style="width: 100%" required="1"/>
                <footer>
                    <button string="Create Mapper" name="create_mapper_action" type="object" class="oe_highlight"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
